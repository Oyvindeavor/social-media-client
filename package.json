{
  "name": "css-frameworks-ca",
  "version": "1.0.3",
  "type": "module",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/js/**/*.js src/scss/**/*.scss",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint --fix src/js/**/*.js",
    "prepare": "husky install",
    "test": "npm run test-unit && npm run test-e2e",
    "test-e2e": "cypress open",
    "test-unit": "jest"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "cypress": "^13.15.0",
    "eslint": "^9.12.0",
    "eslint-plugin-cypress": "^4.0.0",
    "eslint-plugin-jest": "^28.8.3",
    "husky": "^9.1.6",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "npm": "^10.9.0",
    "prettier": "^3.3.3",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --w",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --w"
    ],
    "*.scss": [
      "prettier --w"
    ],
    "!*.test.js": []
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
