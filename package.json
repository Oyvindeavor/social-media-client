{
  "name": "css-frameworks-ca",
  "version": "1.0.2",
  "type": "module",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/js/**/*.js src/scss/**/*.scss",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint --fix src/js/**/*.js",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "prettier": "^3.3.3",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --w",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --w"
    ],
    "*.scss": [
      "prettier --w"
    ]
  }
}
